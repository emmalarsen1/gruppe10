---
// Supports weights 400-700
import "@fontsource-variable/arimo";
---

<nav>
  <div class="logo">
    <a href="/index.astro"><img src="/logo.svg" alt="logo" /></a>
  </div>
  <label for="menu-toggle" class="menu-icon">&#9776;</label>
  <ul id="menu-items">
    <li><a href="/tickets/">TICKETS</a></li>
    <li><a href="/talks/">TALKS</a></li>
    <li><a href="/about/">ABOUT</a></li>
  </ul>
</nav>

<style>
  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem; /* Add padding for better spacing */
  }

  .logo {
    margin-right: 1rem; /* Adjust margin for spacing between logo and menu items */
  }

  ul {
    list-style: none;
    display: flex;
    gap: 5rem; /* Adjust the gap between menu items */
  }

  li {
    /* Adjust styles as needed */
  }

  a {
    text-decoration: none;
    font-family: "Arimo Variable", sans-serif;
  }

  /* Media query for responsiveness */
  @media screen and (max-width: 768px) {
    nav {
      flex-direction: column;
      align-items: flex-start;
    }

    .logo {
      margin-bottom: 1rem; /* Adjust margin for spacing between logo and menu items in mobile view */
      margin-right: 0;
    }

    ul {
      flex-direction: column;
      gap: 0.5rem; /* Adjust the gap between menu items in mobile view */
    }
  }

  /* Add styles for the burger menu */
  .menu-icon {
    display: none; /* Hide the menu icon by default */
    cursor: pointer;
    font-size: 1.5rem;
    position: fixed;
    top: 1rem;
    right: 1rem;
    color: #2e3192;
  }

  /* Styles for the burger menu in mobile view */
  @media screen and (max-width: 768px) {
    .logo {
      margin-bottom: 1rem;
      margin-right: 1rem; /* Adjust margin for spacing between logo and burger icon */
    }

    #menu-items {
      display: none;
      flex-direction: column;
      gap: 0.5rem;
    }

    li {
      text-align: center;
    }

    /* Display the menu icon */
    .menu-icon {
      display: inline-block; /* Make the menu icon inline */
      margin-right: 1rem; /* Adjust margin for spacing between icon and menu items */
    }

    /* Show the menu items when the menu icon is clicked */
    #menu-items:target {
      display: flex;
    }
  }
</style>
