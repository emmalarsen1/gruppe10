<style>
    @media (min-width: 700px){  
.grid1_1{
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap:20px;
}
img{
    width:90%;
  
}
.text{
    padding-right: 50px;
}

.space{
    margin-top: 90px;
margin-bottom: 90px;
}
    }
   @media (min-width: 1000px){ 
 .container {
            position: relative;
            width: 100%;
            height: 100%;
        }
        
        .background-image {
            position: absolute;
            top: -40%;
            left: 74%;
            width: 300px;
            height: 400px;
            transition: opacity 0.5s;
        }
         .background-image_1 {
            position: absolute;
            top: -40%;
            left: 74%;
            width: 300px;
            height: 400px;
            transition: opacity 0.5s;
        }
        
        .foreground-image {
            position: relative;
            top: 0;
            left: 0;
           width: auto;
            height: 400px;
            object-fit: cover; /* Ensure the image covers the container */
            z-index: 1;
           
        }
         .container:hover .background-image  {
            opacity: 0;
        }

        .container:hover .foreground-image {
            opacity: 1;
        }
         .container:hover .background-image_1 {
            opacity: 1;
        }
        .background-image_2 {
            position: absolute;
            top: -54%;
            left: -25%;
            width: 300px;
            height: 400px;
            transition: opacity 0.5s;
        }
         .background-image_3 {
            position: absolute;
            top: -54%;
            left: -25%;
            width: 300px;
            height: 400px;
            transition: opacity 0.5s;
        }
        .container:hover .background-image_3  {
            opacity: 0;
        }

         .container:hover .background-image_2 {
            opacity: 1;
        }
}
h1{
    font-size: 3rem;
    margin-bottom: 20px;
}
img .background-image .background-image_1 {
   visibility: hidden;
}

</style>