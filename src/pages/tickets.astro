---
import MainLayouts from "../layouts/MainLayouts.astro";
---

<MainLayouts>
  <section>
    <div>
      <div>
      <img src="../img/billet1.svg" alt="billet1" />
      </div>
       <div>
      <h2>LIVE-EVENT</h2>
      <p>Join us live* in Copenhagen!</p>
      <h3>DKK 6,500</h3>
      <button>ADD TO CART</button>
      </div>
    </div>
    <div>
      <img src="/billet2.svg" alt="billet2" />
      <h2>LIVE-STREAM</h2>
      <p>Watch the full live-stream !</p>
      <h3>DKK 3,500</h3>
      <button>ADD TO CART</button>
    </div>
    <div>
      <img src="/billet3.svg" alt="billet3" />
      <h2>RECORDED-EVENT</h2>
      <p>Watch the full footage !</p>
      <h3>DKK 2,400</h3>
      <button>ADD TO CART</button>
    </div>
    <div>
      <img src="/billet4.svg" alt="billet4" />
      <h2>GROUP-EVENT</h2>
      <p>Please contact us</p>
      <h3>Depends</h3>
      <button>ADD TO CART</button>
    </div>
  </section>
</MainLayouts>
<style>
  section {
    display: flex;
    gap: 3rem;
    margin: 5%;
    justify-content: center;
  }
  button{
    font-weight: bold;
   color: #FFE7E9;
   background-color: #2e3192;
   border-style: none;
   padding: 8px;
   border-radius: 4px;
   font-size: 1rem;
   margin-top: 10px;
   box-shadow: 2px 3px 5px rgba(0, 0, 0, 0.5);;
}
button:hover{
      font-weight: bold;
   color: #284D3B;
   background-color: #FFE7E9;
   border-style: none;
   padding: 6px;
   border-radius: 4px;
   font-size: 1rem;
   margin-top: 10px;
   border: 2px solid #284D3B;
}

</style>
